{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "state_dataset/fixed_cleaned data/state_dataset.csv"},
  "vconcat": [
    {
      "transform": [
        {
          "filter": "datum['Project type'] == 'New' || datum['Project type'] == 'Existing'"
        },
        {
          "filter": "sector_selection == null || datum.Sector == sector_selection"
        }
      ],
      "width": 600,
      "height": 400,
      "mark": {"type": "bar", "tooltip": {"content": "data"}},
      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "Budget year",
          "type": "ordinal",
          "axis": {"format": "%Y", "title": "Budget Year"}
        },
        "y": {
          "aggregate": "sum",
          "field": "TEI",
          "type": "quantitative",
          "axis": {"title": "Total Estimated Investment"}
        },
        "color": {
          "field": "Sector",
          "type": "nominal",
          "scale": {"scheme": "category20b"}
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum['Project type'] == 'New' || datum['Project type'] == 'Existing'"
        },
        {
          "filter": "sector_selection == null || datum.Sector == sector_selection"
        }
      ],
      "width": 600,
      "height": 300,
      "layer": [
        {
          "mark": "line",
          "encoding": {
            "x": {
              "timeUnit": "year",
              "field": "Budget year",
              "type": "ordinal",
              "axis": {"format": "%Y", "title": "Budget Year"}
            },
            "y": {
              "aggregate": "count",
              "type": "quantitative",
              "axis": {"title": "Number of Projects"}
            },
            "color": {
              "field": "Sector",
              "type": "nominal",
              "scale": {"scheme": "category20b"}
            },
            "detail": {"field": "Sector"}
          }
        },
        {
          "mark": {
            "type": "point",
            "filled": true,
            "tooltip": {"content": "data"}
          },
          "encoding": {
            "x": {
              "timeUnit": "year",
              "field": "Budget year",
              "type": "ordinal"
            },
            "y": {
              "aggregate": "count",
              "type": "quantitative"
            },
            "color": {
              "field": "Sector",
              "type": "nominal",
              "scale": {"scheme": "category20b"}
            }
          }
        }
      ]
    }
  ],
  "params": [
    {
      "name": "sector_selection",
      "bind": {
        "input": "select",
        "options": [null, "Culture, sport and community", "Education and Training", "Environment", "Health and human services", "Justice and emergency services", "Transport", "Water"],
        "name": "Sector Selection: ",
        "labels": ["Show All", "Culture, sport and community", "Education and Training", "Environment", "Health and human services", "Justice and emergency services", "Transport", "Water"]
      }
    }
  ]
}
