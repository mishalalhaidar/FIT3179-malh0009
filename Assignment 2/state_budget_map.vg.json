{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height":570,
    "background":"transparent",
    "data":{
        "url": "VMLITE_WGS84_V2.topojson",
        "format":{"type": "topojson","feature": "VMLITE_WGS84_REGION_V2"}
    },
    "params": [
        {
            "name": "year_selection",
            "value": 2020,
            "bind":{
                "input": "range",
                "min": 2020,
                "max": 2023,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "layer": [
        {
            "mark":{"type": "geoshape","fill":"#5BCBF5","stroke":"gray"},
            "projection": {"type":"mercator"}
        },
        {
            "data":{"url": "state_dataset/fixed_cleaned data/state_by_region/total_tei_region.csv"},
            "mark": {"type": "circle","tooltip":{"content": "data"},"fill":"#075C9E"},
            "transform": [
                {
                    "filter": "datum.year == year_selection"
                }
            ],
            "encoding": {
                "longitude": {"field":"longitude","type": "quantitative"},
                "latitude":{"field":"latitude","type": "quantitative"},
                "size":{
                    "field": "investment",
                    "type": "quantitative",
                    "legend":{"title":"Investment"},
                    "scale":{"range":[0,2000],"domain":[5e7,6.5e9]}
                }
            }
        }
    ],
    "config": {
        "view": {"stroke":"transparent"}
    }
}
