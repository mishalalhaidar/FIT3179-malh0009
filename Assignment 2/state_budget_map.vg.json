{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 800,
    "title": "State Budget Test",
    "data":{
        "url": "VMLITE_WGS84_V2.topojson",
        "format":{"type": "topojson","feature": "VMLITE_WGS84_REGION_V2"}
    },
    "layer": [
        {
            "mark":{"type": "geoshape","fill":"lightgray","stroke":"black"},
            "projection": {"type":"mercator"}
        },
        {
            "data":{"url": "state_dataset/fixed_cleaned data/state_by_region/total_tei_region.csv"},
            "mark": {"type": "circle","tooltip":{"content": "data"}},
            "encoding": {
                "longitude": {"field":"longitude","type": "quantitative"},
                "latitude":{"field":"latitude","type": "quantitative"},
                "size":{
                    "field": "investment",
                    "type": "quantitative",
                    "scale": {"range": [0, 2000]},
                    "legend":{"title":"Investment"}
                }
            }
        }
    ]
}
